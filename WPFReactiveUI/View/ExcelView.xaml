        <materialDesign:Card Background="DimGray" 
                             Foreground="{DynamicResource PrimaryHueDarkForegroundBrush}"
                             Padding="2">
            <StackPanel>
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="7*"/>
                    </Grid.ColumnDefinitions>
                    <Button Content="Back" 
                        x:Name="backButton"
                        Grid.Column="0"
                        FontSize="18"
                        Margin="5,5,0,5"/>
                </Grid>

                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="3*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="auto"/>
                    </Grid.RowDefinitions>

                    <TextBlock 
                    Grid.Column="0"
                    Grid.Row="0"
                    Text="File Name: "
                    TextAlignment="Center"
                    FontSize="20"/>
                    <TextBox
                    IsReadOnly="True"
                    Grid.Column="1"
                    Grid.Row="0"
                    Padding="5"
                    Style="{StaticResource MaterialDesignOutlinedTextBox}"
                    materialDesign:HintAssist.Hint="File name"
                    Text="{Binding SearchInput}"
                    x:Name="searchTextBox" 
                     />
                    <Button 
                    Grid.Column="3"
                    Grid.Row="0"
                    Content="Open File"
                    FontSize="18 "
                    Margin="5 0 5 0" 
                    x:Name="btnOpenFileDialog"
                    Command="{Binding OpenFileCommand}"
                     />
                </Grid>
                <Grid Margin="0,5,0,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="3*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition/>
                    </Grid.RowDefinitions>
                    <TextBlock 
                    Grid.Column="0"
                    Grid.Row="0"
                    Text="Filter by region: "
                    TextAlignment="Center"
                    FontSize="20"/>
                    <ComboBox Grid.Column="1"
                              x:Name="cmbFilterRegion" 
                              FontSize="11"
                              Style="{StaticResource MaterialDesignOutlinedComboBox}"
                              materialDesign:HintAssist.Hint="Pick a region"
                              materialDesign:HintAssist.HintOpacity=".26"
                              IsEnabled="{Binding Path=IsChecked, ElementName=OutlinedComboBoxEnabledCheckBox}"
                              ItemsSource="{Binding Regions}"/>
                    <Button 
                    Grid.Column="3"
                    Grid.Row="0"
                    Content="Filter"
                    FontSize="18 "
                    Margin="5 0 5 0" 
                    Command="{Binding SearchCommand}"
                     />
                </Grid>
                <Grid Margin="0,5,0,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock 
                    Grid.Column="0"
                    Grid.Row="0"
                    Text="Filter by date: "
                    TextAlignment="Center"
                    FontSize="20"/>
                    <TextBlock 
                    Grid.Column="1"
                    Grid.Row="0"
                    Text="From: "
                    TextAlignment="Right"
                    FontSize="20"/>
                    <DatePicker Grid.Column="2"
                                FontSize="16" 
                                materialDesign:HintAssist.Hint="Pick Date"
                                materialDesign:TextFieldAssist.HasClearButton="True"
                                Style="{StaticResource MaterialDesignFloatingHintDatePicker}"/>
                    <TextBlock 
                    Grid.Column="3"
                    Grid.Row="0"
                    Text="To: "
                    TextAlignment="Right"
                    FontSize="20"/>
                    <DatePicker Grid.Column="4"
                                FontSize="16" 
                                materialDesign:HintAssist.Hint="Pick Date"
                                materialDesign:TextFieldAssist.HasClearButton="True"
                                Style="{StaticResource MaterialDesignFloatingHintDatePicker}"/>
                    <Button 
                    Grid.Column="5"
                    Grid.Row="0"
                    Content="Filter"
                    FontSize="18 "
                    Margin="5 0 5 0" 
                    Command="{Binding SearchCommand}"
                     />
                </Grid>
                <Grid VerticalAlignment="Stretch"
                      HorizontalAlignment="Stretch"
                      Height="470">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    <DataGrid Height="auto"
                              Width="auto"
                              x:Name="excelDataGrid"
                              ItemsSource="{Binding ImportExcel}"
                              ColumnWidth="*"
                              IsReadOnly="True"
                              AutoGenerateColumns="True"
                              CanUserResizeColumns="False"
                              CanUserResizeRows="False"
                              CanUserReorderColumns="False"
                              CanUserSortColumns="False"/>
                </Grid>
            </StackPanel>
        </materialDesign:Card>
    </Grid>
</reactiveUi:ReactiveUserControl>
